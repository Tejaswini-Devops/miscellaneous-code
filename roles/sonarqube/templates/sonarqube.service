[Unit]
Description=Sonarqube 10
After=network.target network-online.target
Wants=network-online.target

[Service]
Type=forking
User=sonarqube
Group=sonarqube
ExecStart=/home/sonarqube/sonarqube-25.6.0.109173/bin/linux-x86-x64/sonar.sh start
ExecStop=/home/sonarqube/sonarqube-25.6.0.109173/bin/linux-x86-x64/sonar.sh stop
ExecReload=/home/sonarqube/sonarqube-25.6.0.109173/bin/linux-x86-x64/sonar.sh restart
LimitNOFILE=65536
Restart=on-failure

[Install]
WantedBy=multi-user.target
